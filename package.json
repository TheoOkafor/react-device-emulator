{
  "name": "react-device-emulator",
  "version": "1.1.3",
  "description": "A device emulator for ReactJS apps",
  "main": "index.js",
  "repository": "https://github.com/TheoOkafor/react-device-emulator.git",
  "author": "Theo Okafor <theo.okafor@yahoo.com>",
  "license": "Apache",
  "private": false,
  "keywords": [
    "react",
    "emulator",
    "simulator",
    "mobile emulator",
    "mobile simulator",
    "device simulator",
    "device simulation"
  ],
  "scripts": {
    "start": "webpack-dev-server --hot --mode development",
    "build": "rm -rf lib && babel ./src/emulator -d lib/emulator && yarn copy",
    "webpack": "webpack --mode production",
    "copy": "cp -rf src/assets lib && cp -rf src/styles lib",
    "test": "jest --coverage",
    "release": "standard-version"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@testing-library/react": "^13.4.0",
    "@webpack-cli/generators": "^3.0.1",
    "babel-loader": "^9.1.2",
    "css-loader": "^6.7.3",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.8.1",
    "standard-version": "^9.5.0",
    "style-loader": "^3.3.1",
    "typescript": "^5.1.6",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react-frame-component": "^4.1.1"
  },
  "jest": {
    "verbose": true,
    "moduleNameMapper": {
      "^[./a-zA-Z0-9$_-]+\\.svg$": "<rootDir>/src/test/relativeImageStub.js"
    },
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/test/relativeImageStub.js"
    ]
  },
  "credits": "Pierre Wahlgren (author of https://github.com/Deschtex/react-device-simulator)"
}
